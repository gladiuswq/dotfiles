# add ~/.local/bin to PATH
export PATH="$PATH:$HOME/.local/bin"

# default programs
export EDITOR="nvim"
export VISUAL="nvim"
export SUDO_EDITOR="nvim"
export TERMINAL="alacritty"
export BROWSER="firefox"

# xdg directory specification
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

# use custom colorscheme for ls, tree, etc
export LS_COLORS="$(vivid generate catppuccin-mocha)"

# xinit and startx files
export XINITRC="$XDG_CONFIG_HOME/x11/xinitrc"
export XAUTHORITY="$XDG_RUNTIME_DIR/Xauthority"

# x11 cursor theme
export XCURSOR_PATH="$XDG_DATA_HOME/icons"

# hardware video acceleration (vaapi)
export LIBVA_DRIVER_NAME=iHD

# enable firefox smooth scrolling
export MOZ_USE_XINPUT2=1

# enable hidpi scaling in gtk applications
export GDK_SCALE=2
export GDK_DPI_SCALE=0.5

# use gtk file dialogs in qt apps (e.g. in telegram)
export QT_QPA_PLATFORMTHEME=gtk3

